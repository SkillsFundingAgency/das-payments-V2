{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "networkTemplateFile": {
            "type": "string",
            "metadata": {
                "description": "Relative path to the network template file"
            }
        },
        "clusterTemplateFile":{
            "type": "string",
            "metadata": {
                "description": "Relative path to the cluster template file"
            }
        },
        "clusterName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Service Fabric cluster"
            }
        },
        "clusterSize": {
            "type": "int",
            "metadata": {
                "description": "Number of nodes in the cluster"
            }
        },
        "vmSku": {
            "type": "string",
            "metadata": {
                "description": "VM size for the cluster nodes"
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Admin username for cluster VMs"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Admin password for cluster VMs"
            }
        },
        "environment": {
            "type": "string",
            "metadata": {
                "description": "Deployment environment (e.g., DAS, DST, SIT)"
            }
        },

        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources"
            }
        }
    },
    "variables": {
        "networkTemplateFile": "[parameters('networkTemplateFile')]",
        "clusterTemplateFile": "[parameters('clusterTemplateFile')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "networkDeployment",
            "properties": {
                "mode": "Incremental",
                "template": "[loadFile(parameters('networkTemplateFile'))]",
                "parameters": {
                    "clusterName": {"value": "[parameters('clusterName')]"},
                    "location": {"value": "[parameters('location')]"}
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "clusterDeployment",
            "dependsOn": [
                "networkDeployment"
            ],
            "properties": {
                "mode": "Incremental",
                "template": "[loadFile(parameters('clusterTemplateFile'))]",
                "parameters": {
                    "clusterName": {"value": "[parameters('clusterName')]"},
                    "clusterSize": {"value": "[parameters('clusterSize')]"},
                    "vmSku": {"value": "[parameters('vmSku')]"},
                    "adminUsername": {"value": "[parameters('adminUsername')]"},
                    "adminPassword": {"value": "[parameters('adminPassword')]"},
                    "environment": {"value": "[parameters('environment')]"},
                    "location": {"value": "[parameters('location')]"},
                    "virtualNetworkName": {"value": "[reference('networkDeployment').outputs.virtualNetworkName.value]"},
                    "subnetName": {"value": "[reference('networkDeployment').outputs.subnetName.value]"}
                }
            }
        }
    ],
    "outputs": {
        "clusterEndpoint": {
            "type": "string",
            "value": "[reference('clusterDeployment').outputs.clusterEndpoint.value]"
        }
    }
}
