{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "clusterName": {
            "value": "sf-{environment}-cluster"
        },
        "clusterSize": {
            "value": 5
        },
        "vmSku": {
            "value": "Standard_D2_v2"
        },
        "adminUsername": {
            "value": "sfadmin"
        },
        "adminPassword": {
            "value": "sfpassword"
        },
        "environment": {
            "value": "{environment}"
        },
        "networkTemplateUri": {
            "value": "$(Pipeline.Workspace)/drop/Infrastructure/SFA.DAS.Payments.SFCluster/pipeline/network-template.json" 
        },
        "clusterTemplateUri": {
            "value": "$(Pipeline.Workspace)/drop/Infrastructure/SFA.DAS.Payments.SFCluster/pipeline/cluster-template.json" 
        }
    }
}
